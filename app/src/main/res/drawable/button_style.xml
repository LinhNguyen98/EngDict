<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="#ac5353"
            android:endColor="#e61919"
            />
<!--        <stroke-->
<!--            android:width="5dp"-->
<!--            android:color="#075aaa"/>-->
        <corners
            android:radius="50dp">
        </corners>


    </shape>

</item>
    <item android:state_active="false">
        <shape>
        <gradient
            android:angle="90"
            android:endColor="#4dd2ff"
            android:startColor="#006080"/>
        <stroke
            android:width="5dp"
            android:color="#83A9D6"/>
        <corners
            android:radius="50dp">
        </corners>


    </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#4F4F4F"/>
            <corners
                android:radius="10dp">
            </corners>
        </shape>
    </item>



</selector>